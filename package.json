{
  "name": "telegram-gitlab-bot",
  "version": "1.0.0",
  "description": "Telegram Bot for GitLab CI/CD integration",
  "main": "dist/index.js",
  "scripts": {
    "serve": "ts-node-dev --respawn --transpile-only -r tsconfig-paths/register src/index.ts",
    "build": "tsc",
    "start": "yarn kill-bot && sleep 2 && node -r module-alias/register dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "validate-tokens": "ts-node -r tsconfig-paths/register scripts/validate-tokens.ts",
    "kill-bot": "./scripts/kill-bot.sh",
    "dev": "yarn kill-bot && sleep 2 && yarn serve"
  },
  "keywords": [
    "telegram",
    "bot",
    "gitlab",
    "ci-cd",
    "typescript",
    "nodejs"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.0",
    "dotenv": "^16.3.0",
    "express": "^4.18.2",
    "module-alias": "^2.2.3",
    "node-telegram-bot-api": "^0.64.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.20",
    "@types/jest": "^29.5.5",
    "@types/node": "^20.8.0",
    "@types/node-telegram-bot-api": "^0.64.0",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.7.0",
    "prettier": "^3.0.3",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "_moduleAliases": {
    "@": "./dist"
  }
}
